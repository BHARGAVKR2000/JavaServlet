<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>ServletTraining</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  		<servlet-name>addingnumbers</servlet-name>
  		<servlet-class>com.servlet.demo.AddingServlet</servlet-class>
  		<init-param>
  				<param-name>name</param-name>
  				<param-value>bhargav kr</param-value>
  		</init-param>
  </servlet>
  <servlet-mapping>
 		<servlet-name>addingnumbers</servlet-name>
 		<url-pattern>/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>squarenumbers</servlet-name>
  		<servlet-class>com.servlet.demo.SquareServlet</servlet-class>
  </servlet>
  <servlet-mapping>
 		<servlet-name>squarenumbers</servlet-name>
 		<url-pattern>/square</url-pattern>
  </servlet-mapping>
  
  <context-param>
  		<param-name>name</param-name>
  		<param-value>Bhargav</param-value>
  </context-param>
  
</web-app>